# hide menubar icon
config menuBarIconHidden true

# layouts
layout code 'Terminal' move screenOriginX;screenOriginY screenSizeX/12*2;screenSizeY
layout code 'Atom' move screenOriginX+screenSizeX/12*2;screenOriginY screenSizeX/12*5;screenSizeY
layout code 'Google Chrome' move screenOriginX+screenSizeX/12*7;screenOriginY screenSizeX/12*5;screenSizeY
bind 0:alt;cmd layout code

# screen positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias lefttwothirds move screenOriginX;screenOriginY screenSizeX/3*2;screenSizeY
alias righttwothirds move screenOriginX+screenSizeX/3;screenOriginY screenSizeX/3*2;screenSizeY
alias leftonethird move screenOriginX;screenOriginY screenSizeX/3;screenSizeY
alias rightonethird move screenOriginX+screenSizeX/3*2;screenOriginY screenSizeX/3;screenSizeY

# window resize and reposition
bind /:alt;cmd ${full}
bind [:alt;cmd ${lefttwothirds}
bind ]:alt;cmd ${righttwothirds}
bind ;:alt;cmd ${leftonethird}
bind ':alt;cmd ${rightonethird}
bind [:ctrl;cmd ${lefthalf}
bind ]:ctrl;cmd ${righthalf}

# move to next monitor
bind ,:alt;cmd throw next
