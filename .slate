# hide menubar icon
config menuBarIconHidden true

# alt+cmd / = fullscreen
bind /:ctrl;cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY

# alt+cmd [ = left half
bind [:ctrl;cmd move screenOriginX;screenOriginY screenSizeX/2;screenSizeY

# alt+cmd ] = right half
bind ]:ctrl;cmd move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

# ctrl+cmd [ = left 2/3
bind [:alt;cmd move screenOriginX;screenOriginY screenSizeX/3*2;screenSizeY

# ctrl+cmd ] = right 2/3
bind ]:alt;cmd move screenOriginX+screenSizeX/3;screenOriginY screenSizeX/3*2;screenSizeY

# ctrl+cmd ; = left 1/3
bind ;:alt;cmd move screenOriginX;screenOriginY screenSizeX/3;screenSizeY

# ctrl+cmd ' = right 1/3
bind ':alt;cmd move screenOriginX+screenSizeX/3*2;screenOriginY screenSizeX/3;screenSizeY
